
case $1 in
     hibernate|suspend)
         echo "vdr is going to sleep"
         ;;
     thaw|resume)
         echo "vdr gets started again"
         start vdr
         for INTERFACE in `ifquery --list`; do restart network-interface INTERFACE=$INTERFACE ; done
         start usb-wakeup
         ;;
     *)  echo "Irgendwer ruft mich total falsch auf."
         ;;
esac
