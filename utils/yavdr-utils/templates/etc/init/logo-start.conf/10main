start on (openbox-started or s3-resume)
stop on (started vdr-frontend or started logo-stop)


env DISPLAY=:1
export DISPLAY
export PATH=/usr/local/bin:/usr/bin:/bin
export HOME=/var/lib/vdr

script
if  status <?cs if:(vdr.frontend == "xbmc") ?> xbmc <?cs else ?>  vdr-frontend <?cs /if ?> | grep -q process ; then exit 0 ; fi
PICTURES='/usr/share/yavdr/images/animation/intro*'
xsetroot -cursor /usr/share/yavdr/images/nocursor /usr/share/yavdr/images/nocursor
while true ; do 
   for X in $PICTURES ; do 
       hsetroot -center $X 
   done 
done
end script

post-stop script
xsetroot -cursor_name left_ptr
hsetroot -center /usr/share/yavdr/images/yavdr_logo.png
end script

