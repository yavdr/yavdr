<?cs if:(!?vdr.frontend || vdr.frontend != "disabled") ?>
start on (filesystem and \
          started dbus and \
          (start-xorg or stopped udevtrigger))
stop on runlevel [016]

respawn
env DISPLAY=:1
env XORGCONFIG=/etc/X11/xorg.conf.yavdr
env xorg_driver

<?cs if:(vdr.frontend == "sxfe" ) ?>
export __GL_SYNC_TO_VBLANK=1
<?cs if:(system.x11.dualhead.enabled != "1") ?>
export __GL_SYNC_DISPLAY_DEVICE=`/usr/bin/dbget system.x11.display.default`
<?cs elif:(vdr.tempdisplay != ".1") ?>
export __GL_SYNC_DISPLAY_DEVICE=`/usr/bin/dbget system.x11.display.0.device`
<?cs else ?>
export __GL_SYNC_DISPLAY_DEVICE=`/usr/bin/dbget system.x11.display.1.device`
<?cs /if ?>
<?cs /if ?>

script
# D-bus
if which dbus-launch >/dev/null && test -z "$DBUS_SESSION_BUS_ADDRESS"; then
       eval `dbus-launch --sh-syntax --exit-with-session`
fi

if [ -e /etc/default/locale ]; then
. /etc/default/locale
fi

exec xinit /usr/bin/openbox --config-file /etc/openbox/rc.xml --startup "/sbin/initctl emit --no-wait openbox-started" -- :1 vt7
end script

<?cs /if ?>

