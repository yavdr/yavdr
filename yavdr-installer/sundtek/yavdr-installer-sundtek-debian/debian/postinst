#!/bin/sh

case "$1" in
    configure)

	cd /tmp        
	wget http://www.sundtek.de/media/sundtek_installer_development.sh
 	chmod +x sundtek_installer_development.sh
        ./sundtek_installer_development.sh
	rm -f /etc/udev/rules.d/80-remote-eeti.rules
	rm -f /lib/udev/rules.d/80-remote-eeti.rules
	/opt/bin/lirc.sh REMOVE
	signal-event change-remote-hardware
       ;;


esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

exit 0

#DEBHELPER#
