#!/bin/sh

case "$1" in
    configure)

        chmod +x /usr/share/yavdr/events/actions/*
        mkdir -p /var/lib/vdr/.etracer
	chown -R vdr:vdr /var/lib/vdr/.etracer/	
 #       /usr/bin/dpkg-trigger yavdr-addons-update
        
        ;;


esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

exit 0

#DEBHELPER#
