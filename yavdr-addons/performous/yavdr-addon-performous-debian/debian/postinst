#!/bin/sh

case "$1" in
    configure)

        chmod +x /usr/share/yavdr/events/actions/*

#        /usr/bin/dpkg-trigger yavdr-addons-update
	mkdir -p /var/lib/vdr/.ultrastar
	chown -R vdr:vdr /var/lib/vdr/.ultrastar
        ;;


esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

exit 0

#DEBHELPER#
