#!/bin/bash

killall -9 wmdrawer > /dev/null 2>&1
process-template /etc/init/performous.conf
process-template --owner=vdr --group=vdr /var/lib/vdr/.config/performous/config.xml
process-template /etc/wmdrawer/games
process-template /etc/vdr/lifeguard.conf
rm -f /usr/bin/start-performous
if [ -e /etc/default/locale ]; then 
. /etc/default/locale
fi 
process-template --owner=vdr --group=vdr /var/lib/vdr/plugins/menuorg.xml
start launcher

