pre-start script
    while [ "$(/opt/bin/mediaclient -e|grep -c '^device ')" = "0" ]; do
        /opt/bin/mediaclient --shutdown||:
        /opt/bin/mediaclient --start
        sleep 5
    done
end script

post-stop script
    vdr-dbus-send /Plugins/dynamite plugin.SVDRPCommand string:'DTAD' string:'force' ||:
    /opt/bin/mediaclient --shutdown
end script
