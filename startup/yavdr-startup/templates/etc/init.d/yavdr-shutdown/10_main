case "$1" in
  start)
	/bin/true
        log_end_msg $?
        restart_xprint
        ;;
  stop)
        log_begin_msg "Stopping $DESC: $NAME"
        # wait for vdr to finish
	while pgrep vdr &> /dev/null ; do sleep 1 ; done
        # finally stop rsyslogd (stop disabled to get vdr stop log=
	kill -TERM $(pgrep rsyslogd)
        log_end_msg $?
        restart_xprint
        ;;
  *)
        N=/etc/init.d/${0##*/}
        echo "Usage: $N {start|stop}" >&2
        exit 1
        ;;
esac

exit 0

