start on stopping vdr
stop on runlevel [016]


env DISPLAY=:1
export DISPLAY
export PATH=/usr/local/bin:/usr/bin:/bin
export HOME=/var/lib/vdr

script
DELAY=.5
PICTURES='/usr/share/yavdr/images/extro*'
xsetroot -cursor /usr/share/yavdr/images/nocursor /usr/share/yavdr/images/nocursor
while true ; do for X in $PICTURES ; do hsetroot -center $X ; sleep $DELAY ; done ; done
end script

