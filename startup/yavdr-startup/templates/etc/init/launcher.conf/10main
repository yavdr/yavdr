description     "Launcher for external applications"
author          "Holger Reichelt <holgerr@yavdr.de>"

start on started openbox
stop on stopping openbox

script
export PATH=/usr/local/bin:/usr/bin:/bin
export HOME=/var/lib/vdr

DELAY=.75
CATEGORIES='system web media games tools'
(for X in $CATEGORIES ; do (su -c "DISPLAY=:1 wmdrawer -c /etc/wmdrawer/$X &" vdr) ; sleep $DELAY ; done) &
end script

