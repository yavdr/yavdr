start on (startup
          or stopped vdr-frontend)
task

script
  setterm -cursor off -store >/dev/tty1
  setterm -cursor off -store >/dev/tty7
  setterm -clear >/dev/tty1
  setterm -clear >/dev/tty7
  setterm -foreground black -store >/dev/tty1
  setterm -foreground black -store >/dev/tty7
  while ! DISPLAY=:1 xli -onroot -center -border black /usr/share/yavdr/images/yavdr_logo.png; do sleep 0.1 ; done
  sleep 60
  setterm -foreground white -store >/dev/tty1
  setterm -foreground white -store >/dev/tty7
end script
