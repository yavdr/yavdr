start on startup

task

script
  setterm -foreground black -store >/dev/tty1
  setterm -foreground black -store >/dev/tty7
  setterm -foreground black -store >/dev/tty9
  setterm -cursor off -store >/dev/tty1
  setterm -cursor off -store >/dev/tty7
  setterm -cursor off -store >/dev/tty9
end script

post-start script
sleep 30
setterm -clear > /dev/tty1
setterm -clear > /dev/tty7
setterm -clear > /dev/tty9
end script


