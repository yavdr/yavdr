start on openbox-started


env DISPLAY=:1
export DISPLAY
export PATH=/usr/local/bin:/usr/bin:/bin
export HOME=/var/lib/vdr

task 

script
DELAY=.5
PICTURES='/usr/share/yavdr/images/intro*'
xsetroot -cursor /usr/share/yavdr/images/nocursor /usr/share/yavdr/images/nocursor
until status vdr-frontend | grep -q running ; do 
   for X in $PICTURES ; do 
       hsetroot -center $X 
       sleep $DELAY 
   done 
done
end script

post-stop script
xsetroot -cursor_name left_ptr
hsetroot -center /usr/share/yavdr/images/yavdr_logo.png;
end script

