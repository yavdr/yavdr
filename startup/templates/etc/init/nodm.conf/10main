# nodm - NODM Display Manager
#
# The display manager service manages the X servers running on the
# system, providing auto-login services

description	"NODM Display Manager"
author		"Gerald Dachs <gda@dachsweb.de>"

start on filesystem

stop on runlevel [016]

<?cs if:(!?vdr.frontend || vdr.frontend != "headless") ?> 
respawn

script
    [ ! -f /etc/X11/default-display-manager -o "$(cat /etc/X11/default-display-manager 2>/dev/null)" = "/usr/sbin/nodm" ]

    # Check kernel command-line for inhibitors
    for ARG in $(cat /proc/cmdline)
    do
        case "${ARG}" in
            text|-s|s|S|single)
                exit 0
                ;;
        esac
    done

    if [ -r /etc/default/locale ]; then
	. /etc/default/locale
	export LANG LANGUAGE
    elif [ -r /etc/environment ]; then
	. /etc/environment
	export LANG LANGUAGE
    fi

    if modprobe nvidia-current ; then
        if [ "x$(dbget system.hardware.nvidia.detected)" != "x1" ]; then
           changed=1
           dbset "system.hardware.nvidia.detected=1"
        fi
    else
        if [ "x$(dbget system.hardware.nvidia.detected)" != "x0" ]; then
           changed=1
           dbset "system.hardware.nvidia.detected=0"
        fi
    fi

    if [ "x$changed" = "x1" ]; then 
       if [ "x$(dbget system.hardware.nvidia.detected)" = "x0" ]; then
          [ -f /etc/X11/xorg.conf.yavdr ] && mv /etc/X11/xorg.conf.yavdr /etc/X11/xorg.conf.yavdr_disabled
       fi
       if [ "x$(dbget system.hardware.nvidia.detected)" = "x1" ]; then
          [ -f /etc/X11/xorg.conf.yavdr ] && mv /etc/X11/xorg.conf.yavdr /etc/X11/xorg.conf.yavdr_backup
	  signal-event create-xorg-conf-yavdr
       fi
    fi 

    if [ -f /etc/X11/xorg.conf.yavdr ]; then
      export XORGCONFIG=xorg.conf.yavdr
    fi

    NODM_USER=vdr
    NODM_FIRST_VT=9
    NODM_X_OPTIONS="-br"
    NODM_XSESSION=/etc/X11/Xsession.vdr
    DISPLAY=:1
    export NODM_USER NODM_FIRST_VT NODM_X_OPTIONS NODM_XSESSION DISPLAY
    if ! /usr/sbin/nodm; then touch /tmp/nodm.failed ; fi 
end script

post-start script
export DISPLAY=:1
while ! xset -q && [ ! -e /tmp/nodm.failed ]; do sleep 1 ; done
end script
<?cs else ?>
script
    echo "headless yaVDR Server"
end script
<?cs /if ?>

